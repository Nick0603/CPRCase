<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="acase.cprcase.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/Btn_pageCPR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/cpr"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_marginLeft="56dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/Btn_pageBlueTooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/setting"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/Btn_pageCPR"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/Btn_pageAutoConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/connection"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/Btn_pageCPR"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
